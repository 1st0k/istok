{
  "version": "0.1.0",
  "name": "1st0k",
  "author": "Alexander \"Snov\" Semenchenko",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "lerna": "lerna",
    "start": "lerna run start",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "test": "tsdx test --passWithNoTests",
    "prepublish": "lerna run prepublish",
    "release": "yarn test && yarn lerna publish"
  },
  "dependencies": {
    "lerna": "^3.22.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "resolutions": {
    "**/typescript": "^4.2.3",
    "**/@typescript-eslint/eslint-plugin": "^4.17.0",
    "**/@typescript-eslint/parser": "^4.17.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write 'src/**/*' 'test/**/*' 'README.md'",
      "tsdx lint"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  }
}
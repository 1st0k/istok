{
  "version": "0.1.0",
  "name": "typescript-library-monorepo-template",
  "author": "Alexander \"Snov\" Semenchenko",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "lerna": "lerna",
    "start": "lerna run start",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "test": "tsdx test --passWithNoTests",
    "prepublish": "lerna run prepublish"
  },
  "dependencies": {
    "lerna": "^3.22.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "tsdx": "^0.13.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write 'src/**/*' 'test/**/*' 'README.md'",
      "tsdx lint"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  }
}
